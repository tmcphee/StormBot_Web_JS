<div class="container-fluid">
    <div class="row h-100 justify-content-center align-items-center">
        <form class="col-12 text-center">
            <h3>Select a server</h3>
        </form>   
    </div>
    <div class="row">
		<div class="col-md-2">
        </div>
        <div class="col-md-10">
            {{#each GUILDS}} 
                <button class="btn btn-fix" onclick="window.location.href='/{{id}}/dashboard';">
                    <div class="card flex-row flex-wrap bg-dark text-white">
                        <div class="card-header border-0">
                            <img width="50" height="50" src="https://cdn.discordapp.com/icons/{{id}}/{{icon}}.png" alt="" class="rounded-circle border-2">
                        </div>
                        <div class="card-block px-2">
                            <h4 class="card-title">{{name}}</h4>
                            <p class="card-text">{{id}}</p>
                        </div>
                        <div class="w-100"></div>
                    </div>
                </button>
            {{/each}}
        </div>
    </div>
</div>